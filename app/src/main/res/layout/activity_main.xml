<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Liner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/Fom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="Введите цену за товар(1 единица)"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="194dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Applee"
                android:textAlignment="center"
                android:textColor="#FFFCFC"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_sena_apple"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textColor="#F8F4F4" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Limon"
                android:textAlignment="center"
                android:textColor="#F8F5F5"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_sena_limon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textColor="#F8F4F4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Mandarin"
                android:textAlignment="center"
                android:textColor="#FBFAFA"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_sena_mandarin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textColor="#F8F4F4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Arbyz"
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_sena_persiki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textColor="#F8F4F4" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Кнопки"
            android:onClick="primanit"
            android:text="@string/Применить"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:rippleColor="@color/Нажатии" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="101dp"
                android:layout_height="82dp"
                app:srcCompat="@drawable/apl" />

            <CheckBox
                android:id="@+id/checkBox_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/Нажатии"
                android:onClick="check"
                android:text="@string/Applee"
                android:textColor="#FAF8F8"
                />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="number"
                android:textColor="#F4EFEF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="94dp"
                android:layout_height="82dp"
                app:srcCompat="@drawable/lim" />

            <CheckBox
                android:id="@+id/checkBox_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="check"
                android:text="@string/Limon"
                android:textColor="#FBFAFA"
                android:buttonTint="@color/Нажатии"
                />

            <EditText
                android:id="@+id/editTextNumber2"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="number"
                android:textColor="#F8F3F3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="42dp"
                android:layout_height="82dp"
                app:srcCompat="@drawable/apen" />

            <CheckBox
                android:id="@+id/checkBox_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="check"
                android:text="@string/Mandarin"
                android:textColor="#F8F7F7"
                android:buttonTint="@color/Нажатии"
                />

            <EditText
                android:id="@+id/editTextNumber3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="number"
                android:textColor="#FBFBFB" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="42dp"
                android:layout_height="82dp"
                app:srcCompat="@drawable/arb" />

            <CheckBox
                android:id="@+id/checkBox_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/Нажатии"
                android:onClick="check"
                android:text="@string/Arbyz"
                android:textColor="#F3EFEF"
                />

            <EditText
                android:id="@+id/editTextNumber4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="number"
                android:textColor="#F8F7F7" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Кнопки"
        android:text="@string/Подсчитать"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:rippleColor="@color/Нажатии" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Диалоговое окно"
        android:textAlignment="center"
        android:textColor="#FAF7F7"
        android:textSize="24sp"
        android:buttonTint="@color/Нажатии"/>

</LinearLayout>